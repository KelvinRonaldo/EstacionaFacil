<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisualizarActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dados do Movimento"
        android:textSize="30sp"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/txt_placa_saida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Placa"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/txt_modelo_saida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modelo Do Carro"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/txt_data_hora_entrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrada"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/txt_data_hora_saida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SaÃ­da"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/txt_tempo_permanencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minutos Estacionado"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/txt_valor_pago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valor(R$)"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
    <Button
        android:id="@+id/btn_saida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encerrar Movimento"/>

</LinearLayout>