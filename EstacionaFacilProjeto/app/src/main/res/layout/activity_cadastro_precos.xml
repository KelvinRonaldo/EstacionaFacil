<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroPrecosActivity"
    android:orientation="vertical"
    android:padding="36dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PREÇO VIGENTE"
            android:textSize="24dp"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"/>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/text_primeira_hora"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Primeira Hora:"
                android:textSize="15dp"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/text_demais_horas"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Demais Horas:"
                android:textSize="15dp"
                android:layout_below="@id/text_primeira_hora"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/text_valor_mensal"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Valor Mensal:"
                android:textSize="15dp"
                android:layout_below="@id/text_demais_horas"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/txt_valor_primeira_hora"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="14dp"
                android:text="..."
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/txt_valor_demais_horas"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="14dp"
                android:text="..."
                android:layout_below="@id/txt_valor_primeira_hora"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/txt_valor_mensal"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="14dp"
                android:text="..."
                android:layout_below="@id/txt_valor_demais_horas"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/txt_preco_primeira_hora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="1 Hora"/>

    <EditText
        android:id="@+id/txt_preco_demais_horas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Demais Horas"/>

    <EditText
        android:id="@+id/txt_preco_mensal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Preço Mensal"/>

    <EditText
        android:id="@+id/txt_tempo_tolerancia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tempo de Tolerância"/>

    <Button
        android:id="@+id/btn_cadastro_preco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"/>

</LinearLayout>