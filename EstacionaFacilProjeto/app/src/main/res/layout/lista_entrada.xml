<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/layout_editar"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/placa_lista"
                    android:layout_width="10dp"
                    android:layout_height="30dp"
                    android:layout_weight="3"
                    android:text="JFH-4452"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorBlack"
                    android:textSize="23sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/modelo_lista"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="30dp"
                    android:text="Gol"
                    android:textSize="23sp"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:paddingTop="5dp"
                    android:text="Entrada:"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="textStart"/>

                <TextView
                    android:id="@+id/hora_entrada_lista"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.6"
                    android:text="22/05/19 16:04"
                    android:paddingTop="6dp"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Tipo:"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/tipo_veiculo_lista"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:text="Mensalista"/>

            </LinearLayout>

        </LinearLayout>
        <ImageButton
            android:id="@+id/botao_saida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_weight="0.4"
            android:background="@color/colorNone"
            android:src="@drawable/sair" />
    </LinearLayout>

</LinearLayout>