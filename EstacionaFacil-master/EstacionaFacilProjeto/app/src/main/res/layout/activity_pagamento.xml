<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PagamentoActivity"
    android:orientation="vertical"
    android:padding="24dp">

    <Spinner
        android:id="@+id/spn_mensalistas"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"></Spinner>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spn_mensalistas">

        <EditText
            android:id="@+id/txt_valor_pago_mensalista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor Ã  pagar"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_registro_pagamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Menslista"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>